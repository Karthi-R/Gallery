<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/black"
    android:clickable="true">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_arrow_back" />

    <View
        android:layout_width="2px"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/btn_back"
        android:background="#2E2E32" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/btn_back"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp"
        android:textColor="@color/text_color" />

    <ImageView
        android:id="@+id/crop"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:layout_toLeftOf="@+id/brightness_iv"
        android:layout_marginRight="10dp"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_crop_rotate" />



    <ImageView
        android:id="@+id/brightness_iv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:layout_toLeftOf="@+id/text_edit"
        android:layout_marginRight="10dp"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_brightness" />


    <ImageView
        android:id="@+id/text_edit"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/btn_ok"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_text_fields" />


<!--
    <ImageView
        android:id="@+id/edit"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/btn_ok"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_edit" />
-->


    <ImageView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:minHeight="30dp"
        android:minWidth="48dp"
        android:paddingRight="16.0dp"
        android:paddingLeft="16.0dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_check_black" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_del"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_vector_delete"
        android:visibility="gone" />
</RelativeLayout>