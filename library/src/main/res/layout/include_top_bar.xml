<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/blue"
    android:clickable="true">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_arrow_back" />

    <View
        android:layout_width="2px"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/btn_back"
        android:background="#2E2E32" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/btn_back"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/crop"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_ok"
        android:text="Crop"
        android:padding="10dp"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/btn_ok"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_edit" />


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/selector_top_ok"
        android:minHeight="30dp"
        android:minWidth="48dp"
        android:text="Ok"
        android:paddingRight="16.0dp"
        android:paddingLeft="16.0dp"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_del"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        android:tint="@color/ip_color_primary"
        app:srcCompat="@drawable/ic_vector_delete"
        android:visibility="gone" />
</RelativeLayout>